generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id                 Int      @id @default(autoincrement())
  booking_id         String   @unique @map("booking_id")
  customer_name      String   @map("customer_name")
  origin             String
  destination        String
  cargo_type         String   @map("cargo_type")
  weight             Decimal
  cost               Decimal
  status             String
  shipping_date      DateTime @map("shipping_date")
  estimated_delivery DateTime @map("estimated_delivery")
  created_at         DateTime @default(now()) @map("created_at")

  @@map("bookings")
}

model Tracking {
  id               Int      @id @default(autoincrement())
  booking_id       String   @map("booking_id")
  current_location String   @map("current_location")
  latitude         Decimal
  longitude        Decimal
  status           String
  last_updated     DateTime @default(now()) @map("last_updated")

  @@map("tracking")
}

model Schedule {
  id               Int      @id @default(autoincrement())
  vessel_name      String   @map("vessel_name")
  origin_port      String   @map("origin_port")
  destination_port String   @map("destination_port")
  departure_date   DateTime @map("departure_date")
  arrival_date     DateTime @map("arrival_date")

  @@map("schedules")
}

model Task {
  id         Int      @id @default(autoincrement())
  title      String
  booking_id String   @map("booking_id")
  status     String   @default("Pending")
  created_at DateTime @default(now()) @map("created_at")

  @@map("tasks")
}

model Customs {
  id             Int    @id @default(autoincrement())
  booking_id     String @map("booking_id")
  origin         String
  destination    String
  customs_status String @map("customs_status")

  @@map("customs")
}
